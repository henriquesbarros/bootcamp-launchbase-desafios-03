{% extends "layout.njk" %}

{% block head %}
    <title>Conte√∫dos - Rocketseat</title>
{% endblock %}

{% block content %}

    <section class="cards">
        {% for blog in blogs %}
        <div class="card" id="{{ blog.id }}">
            <div class="card__image">
                <img src="{{ blog.image }}" alt="{{ blog.title }}">
            </div>
            <div class="card__content">
                <h2>{{ blog.title }}</h2>
            </div>
            <div class="card__info">
                <span>por <strong>{{ blog.author }}</strong></span>
                <span>{{ blog.duration }}</span>
            </div>
        </div>
        {% endfor %}
    </section>
    <script src="scripts.js"></script>
{% endblock %}